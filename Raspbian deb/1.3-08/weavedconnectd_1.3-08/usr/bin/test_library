#!/bin/sh
. ./remot3it_library

     get_num=w
#     set -x
        while [ "$(validateInput "$get_num" '[:digit:]')" -eq 1 ]; do
            echo "Please select from the above options (1-4):"
            read get_num
            if [ "$(validateInput "$get_num" '[:digit:]')" -ne 0 ]; then
	        printf "\nSorry, enter numbers only.\n"
                # unset get_num
	    else
		echo "You entered: " $get_num
                ! [ "${get_num}" -ge 1 ] && [ "${get_num}" -le 4 ] && get_num="no"

            fi
        done

